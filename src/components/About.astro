---
import { portfolioData } from "../data/portfolioData";
const { resume_professionnel, soft_skills, centres_interet, langues } = portfolioData;
---

<section id="about" class="py-20 bg-slate-50 dark:bg-slate-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4" data-aos="fade-up">
        À propos de <span class="text-primary-600 dark:text-primary-400">moi</span>
      </h2>
      <div class="w-24 h-1 bg-secondary-500 mx-auto rounded-full"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div data-aos="fade-right" data-aos-delay="200">
        <div class="relative overflow-hidden rounded-lg shadow-xl">
          <img 
            src="https://images.pexels.com/photos/3861969/pexels-photo-3861969.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
            alt="Photo professionnelle" 
            class="w-full h-auto object-cover transform transition-transform duration-700 hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent flex items-end">
            <div class="p-6">
              <p class="text-white text-xl font-semibold">
                "L'intelligence artificielle est l'avenir, et je veux en faire partie."
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <div data-aos="fade-left" data-aos-delay="400">
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-6">
          Qui suis-je?
        </h3>
        
        <p class="text-slate-700 dark:text-slate-300 mb-6 text-lg leading-relaxed">
          {resume_professionnel.description}
        </p>
        <p class="text-slate-700 dark:text-slate-300 mb-8 text-lg leading-relaxed">
          {resume_professionnel.objectif}
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <h4 class="text-xl font-semibold text-primary-600 dark:text-primary-400 mb-4 flex items-center">
              <i class="fas fa-brain mr-2"></i> Soft Skills
            </h4>
            <ul class="space-y-2">
              {soft_skills.map((skill) => (
                <li class="flex items-center text-slate-700 dark:text-slate-300">
                  <i class="fas fa-check-circle text-secondary-500 mr-2"></i> {skill}
                </li>
              ))}
            </ul>
          </div>
          
          <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <h4 class="text-xl font-semibold text-primary-600 dark:text-primary-400 mb-4 flex items-center">
              <i class="fas fa-heart mr-2"></i> Centres d'intérêt
            </h4>
            <ul class="space-y-2">
              {centres_interet.map((interet) => (
                <li class="flex items-center text-slate-700 dark:text-slate-300">
                  <i class="fas fa-star text-accent-500 mr-2"></i> {interet}
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
          <h4 class="text-xl font-semibold text-primary-600 dark:text-primary-400 mb-4 flex items-center">
            <i class="fas fa-language mr-2"></i> Langues
          </h4>
          <div class="space-y-4">
            {langues.map((langue) => (
              <div>
                <div class="flex justify-between mb-1">
                  <span class="text-slate-700 dark:text-slate-300">{langue.langue}</span>
                  <span class="text-slate-600 dark:text-slate-400 text-sm">{langue.niveau}</span>
                </div>
                <div class="w-full bg-slate-200 dark:bg-slate-700 rounded-full h-2.5">
                  <div class="bg-primary-600 dark:bg-primary-500 h-2.5 rounded-full" style={`width: ${
                    langue.niveau.includes("maternelle") ? "100%" : 
                    langue.niveau.includes("Courant") ? "80%" : 
                    langue.niveau.includes("Débutant") ? "40%" : "60%"
                  }`}></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>