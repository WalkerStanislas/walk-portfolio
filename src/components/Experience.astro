---
import { portfolioData } from "../data/portfolioData";
const { formation, experiences_professionnelles } = portfolioData;
---

<section id="experience" class="py-20 bg-slate-50 dark:bg-slate-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4" data-aos="fade-up">
        Expérience <span class="text-primary-600 dark:text-primary-400">& Formation</span>
      </h2>
      <div class="w-24 h-1 bg-secondary-500 mx-auto rounded-full"></div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Formation -->
      <div class="relative" data-aos="fade-right" data-aos-delay="200">
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-8 flex items-center">
          <i class="fas fa-graduation-cap text-primary-600 dark:text-primary-400 mr-3"></i>
          Formation
        </h3>
        
        <div class="space-y-8">
          {formation.map((item, index) => (
            <div class="relative pl-8 pb-8" data-aos="fade-up" data-aos-delay={300 + index * 100}>
              <div class="absolute left-0 top-0 h-full w-0.5 bg-primary-200 dark:bg-primary-900"></div>
              <div class="absolute left-[-5px] top-2 w-3 h-3 rounded-full bg-primary-600 dark:bg-primary-400"></div>
              
              <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300">
                <h4 class="text-xl font-semibold text-slate-900 dark:text-white mb-2">{item.diplome}</h4>
                <p class="text-slate-700 dark:text-slate-300 mb-2">{item.etablissement}</p>
                <p class="text-primary-600 dark:text-primary-400 text-sm font-medium flex items-center">
                  <i class="far fa-calendar-alt mr-2"></i> {item.periode}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Expérience Professionnelle -->
      <div class="relative" data-aos="fade-left" data-aos-delay="400">
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-8 flex items-center">
          <i class="fas fa-briefcase text-secondary-500 dark:text-secondary-400 mr-3"></i>
          Expérience Professionnelle
        </h3>
        
        <div class="space-y-8">
          {experiences_professionnelles.map((item, index) => (
            <div class="relative pl-8 pb-8" data-aos="fade-up" data-aos-delay={300 + index * 100}>
              <div class="absolute left-0 top-0 h-full w-0.5 bg-secondary-200 dark:bg-secondary-900"></div>
              <div class="absolute left-[-5px] top-2 w-3 h-3 rounded-full bg-secondary-500 dark:bg-secondary-400"></div>
              
              <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-md hover:shadow-lg transition-all duration-300">
                <h4 class="text-xl font-semibold text-slate-900 dark:text-white mb-2">{item.poste}</h4>
                <p class="text-secondary-600 dark:text-secondary-400 font-medium mb-2">{item.entreprise}</p>
                <p class="text-slate-700 dark:text-slate-300 mb-2">{item.description}</p>
                <p class="text-secondary-600 dark:text-secondary-400 text-sm font-medium flex items-center">
                  <i class="far fa-calendar-alt mr-2"></i> {item.periode}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>