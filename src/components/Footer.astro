---
import { portfolioData } from "../data/portfolioData";
const { informations_personnelles, liens_professionnels } = portfolioData;

const currentYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-800 py-8 mt-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-6 md:mb-0">
        <h2 class="text-2xl font-bold text-primary-600 dark:text-primary-400 mb-2 font-mono">
          Walker<span class="text-secondary-500">Portfolio</span>
        </h2>
        <p class="text-slate-600 dark:text-slate-400">
          {informations_personnelles.titre}
        </p>
      </div>
      
      <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-6 items-center">
        <div class="flex space-x-4">
          <a 
            href={liens_professionnels.github} 
            target="_blank" 
            rel="noopener" 
            class="text-slate-700 hover:text-primary-600 dark:text-slate-300 dark:hover:text-primary-400 transition-all duration-300 transform hover:scale-110"
            aria-label="GitHub"
          >
            <i class="fab fa-github text-xl"></i>
          </a>
          <a 
            href={liens_professionnels.linkedin} 
            target="_blank" 
            rel="noopener" 
            class="text-slate-700 hover:text-primary-600 dark:text-slate-300 dark:hover:text-primary-400 transition-all duration-300 transform hover:scale-110"
            aria-label="LinkedIn"
          >
            <i class="fab fa-linkedin text-xl"></i>
          </a>
          <a 
            href={`mailto:${informations_personnelles.email}`} 
            class="text-slate-700 hover:text-primary-600 dark:text-slate-300 dark:hover:text-primary-400 transition-all duration-300 transform hover:scale-110"
            aria-label="Email"
          >
            <i class="fas fa-envelope text-xl"></i>
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-800 text-center text-slate-600 dark:text-slate-400 text-sm">
      <p>© {currentYear} {informations_personnelles.nom.split(' ')[0]} {informations_personnelles.nom.split(' ')[1]}. Tous droits réservés.</p>
    </div>
  </div>
</footer>