---
import { portfolioData } from "../data/portfolioData";
const { projets } = portfolioData;

// Import all project images
import newsAnalysis from "../assets/projects/news-analysis.jpg";
import translator from "../assets/projects/translator.jpg";
import chatbot from "../assets/projects/chatbot.png";
import pharmacy from "../assets/projects/pharmacy.jpg";

// Map project titles to their images
const projectImages = {
  "Analysis of News Trends": newsAnalysis,
  "French2English Traductor": translator,
  "Chatbot de prédiction épidémiologique": chatbot,
  "Application mobile santé/pharmacies de garde": pharmacy
};
---

<section id="portfolio" class="py-20 bg-white dark:bg-slate-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4" data-aos="fade-up">
        Mes <span class="text-primary-600 dark:text-primary-400">projets</span>
      </h2>
      <div class="w-24 h-1 bg-secondary-500 mx-auto rounded-full"></div>
      <p class="mt-4 text-slate-700 dark:text-slate-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        Découvrez une sélection de mes projets réalisés dans le domaine de l'IA et du traitement de données.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projets.map((projet, index) => (
        <div class="group relative h-[400px] overflow-hidden rounded-xl shadow-lg transition-all duration-500" data-aos="fade-up" data-aos-delay={200 + index * 100}>
          <div class="absolute inset-0 bg-gradient-to-b from-transparent to-slate-900/90"></div>
          
          <img 
            src={projectImages[projet.titre].src}
            alt={`Image du projet ${projet.titre}`} 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          
          <div class="absolute bottom-0 left-0 right-0 p-6 transform transition-transform duration-500">
            <h3 class="text-2xl font-bold text-white mb-2">{projet.titre}</h3>
            <p class="text-slate-200 mb-4">{projet.description}</p>
            
            {projet.technologies && (
              <div class="flex flex-wrap gap-2 mb-4">
                {projet.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-primary-600/20 text-primary-400 rounded-full text-sm backdrop-blur-sm">
                    {tech}
                  </span>
                ))}
              </div>
            )}
            
            <div class="flex justify-between items-center">
              <span class="text-primary-400 text-sm">{projet.type} • {projet.periode}</span>
              
              <div class="flex space-x-4">
                {projet.liens?.github && (
                  <a 
                    href={projet.liens.github} 
                    target="_blank" 
                    rel="noopener" 
                    class="text-white hover:text-primary-900  duration-300"
                  >
                    <i class="fab fa-github text-xl"></i>
                  </a>
                )}
                {projet.liens?.demo && (
                  <a 
                    href={projet.liens.demo} 
                    target="_blank" 
                    rel="noopener" 
                    class="text-white hover:text-primary-900 duration-300"
                  >
                    <i class="fas fa-external-link-alt text-xl"></i>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>