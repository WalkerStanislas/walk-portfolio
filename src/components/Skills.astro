---
import { portfolioData, techIcons } from "../data/portfolioData";
const { competences_techniques } = portfolioData;
---

<section id="skills" class="py-20 bg-white dark:bg-slate-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white mb-4" data-aos="fade-up">
        Mes <span class="text-primary-600 dark:text-primary-400">compétences</span>
      </h2>
      <div class="w-24 h-1 bg-secondary-500 mx-auto rounded-full"></div>
      <p class="mt-4 text-slate-700 dark:text-slate-300 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
        Un aperçu des technologies et compétences que j'ai acquises tout au long de mon parcours.
      </p>
    </div>
    
    <div class="space-y-16">
      {competences_techniques.map((categorie, categoryIndex) => (
        <div class="skill-category" data-aos="fade-up" data-aos-delay={200 + categoryIndex * 100}>
          <h3 class="text-2xl font-semibold text-slate-900 dark:text-white mb-8 flex items-center">
            <span class="w-12 h-12 inline-flex items-center justify-center bg-primary-100 dark:bg-primary-900 rounded-xl text-primary-600 dark:text-primary-400 mr-4">
              <i class={`fas ${
                categorie.categorie.includes("Langages") ? "fa-code" : 
                categorie.categorie.includes("IA") ? "fa-brain" : 
                categorie.categorie.includes("Bibliothèques") ? "fa-cubes" : 
                categorie.categorie.includes("Base") ? "fa-database" : 
                "fa-tools"
              } text-2xl`}></i>
            </span>
            {categorie.categorie}
          </h3>
          
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
            {categorie.technologies.map((tech) => {
              const techData = techIcons[tech] || { icon: "fas fa-code", color: "#6366F1" };
              return (
                <div 
                  class="group relative bg-white dark:bg-slate-900 rounded-xl p-6 flex flex-col items-center shadow-md hover:shadow-lg transition-all duration-300"
                  data-aos="fade-up"
                >
                  <div class="w-16 h-16 flex items-center justify-center mb-4 rounded-lg bg-slate-100 dark:bg-slate-800 group-hover:scale-110 transition-transform duration-300">
                    <i class={`${techData.icon} text-2xl`} style={`color: ${techData.color};`}></i>
                  </div>
                  <h4 class="text-slate-900 dark:text-white text-center font-medium group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
                    {tech}
                  </h4>
                  
                  <div class="absolute inset-x-0 -top-12 flex justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                    <div class="bg-slate-900 dark:bg-slate-700 text-white px-4 py-2 rounded-lg text-sm">
                      {tech}
                      <div class="absolute bottom-[-6px] left-1/2 transform -translate-x-1/2 w-3 h-3 bg-slate-900 dark:bg-slate-700 rotate-45"></div>
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>